{
  "name": "inventory-tracker",
  "version": "1.0.0",
  "description": "Voice-controlled inventory tracking system",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --testPathIgnorePatterns=e2e --testPathIgnorePatterns=mongodb-integration --testPathIgnorePatterns=migration",
    "test:unit": "jest --testPathIgnorePatterns=e2e --testPathIgnorePatterns=mongodb-integration --testPathIgnorePatterns=migration",
    "test:integration": "jest --testPathPattern=mongodb-integration",
    "test:migration": "jest --testPathPattern=migration", 
    "test:e2e": "node e2e-runner.js",
    "test:all": "jest",
    "test:watch": "jest --watch",
    "deploy": "node deploy.js",
    "dev-deploy": "node dev-deploy.js",
    "stop-dev": "node stop-dev.js",
    "setup": "node setup.js",
    "migrate": "node migrate-to-mongodb.js",
    "deploy:vercel": "./deploy-vercel.sh",
    "test:deployment": "jest --testNamePattern='Post-Deployment Verification'",
    "verify:deployment": "./verify-deployment.sh",
    "build": "echo 'No build step needed'"
  },
  "dependencies": {
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^4.18.2",
    "mongodb": "^6.19.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "mongodb-memory-server": "^9.1.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
